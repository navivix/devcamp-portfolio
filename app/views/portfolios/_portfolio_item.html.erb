<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image %>
    <div class="card-body">
      <p class="card-text">
        <span><strong><%= portfolio_item.title %></strong></span> <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'View', portfolio_show_path(portfolio_item.id), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Edit', edit_portfolio_path(portfolio_item.id), class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>
